<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name, autofocus: true %>
  </div>

  <div class="field" hidden><%= f.email_field :email %></div>
  <div class="field" hidden><%= f.password_field :password, value: "password" %></div>
  <div class="field" hidden><%= f.password_field :password_confirmation, value: "password" %></div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
