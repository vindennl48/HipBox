<%= render partial: "shared/admin_menu", locals: { title: "Groups" } %>

<%= form_with(model: @port_group, local: true) do |form| %>
  <% if @port_group.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@port_group.errors.count, "error") %> prohibited this port group from being saved:</h2>

      <ul>
      <% @port_group.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <table class=" table left no-border ">
    <tbody>
      <tr class="field">
        <td><strong>Name: </strong></td>
        <td><%= form.text_field :name %></td>
      </tr>
      <tr class="field">
        <td><strong>Is Input?</strong></td>
        <td><%= form.check_box :io %></td>
      </tr>
      <tr class="field">
        <td><strong>Is Global?</strong></td>
        <td><%= form.check_box :is_global %></td>
      </tr>
      <tr class="field">
        <td><strong>Is Record?</strong></td>
        <td><%= form.check_box :is_record %></td>
      </tr>
      <tr class="field">
        <td><strong>User ID</strong></td>
        <td><%= form.text_field :user_id %></td>
      </tr>
    </tbody>
  </table>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>

<div class=" link-delete ">
  <%= link_to "Delete",  @port_group, method: :delete, data: { confirm: "Are you sure you want to delete this port group?" } %>
</div>
