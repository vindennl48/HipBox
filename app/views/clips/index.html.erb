<%= render partial: "shared/admin_menu", locals: { title: "Audio" } %>

<div class="port-index-body">
  <h1>Clips</h1>
  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Path</th>
        <th>Gain</th>
        <th>Bpm</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @clips.each do |clip| %>
        <tr>
          <td><%= clip.name %></td>
          <td><%= clip.path %></td>
          <td><%= clip.gain %></td>
          <td><%= clip.bpm %></td>
          <td><%= link_to 'Edit', edit_clip_path(clip) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <div class="link-new">
    <%= link_to 'New', new_clip_path %>, 
    <%= link_to 'Upload' %>
  </div>
</div>
