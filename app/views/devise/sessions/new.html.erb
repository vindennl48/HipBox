<% users = ['james','jesse','mitch','sean'] %>

<div class="dl-wrapper">

  <div class="title">
    <h1>Hipbox v5.0</h1>
  </div>

  <div class="body">

    <div class="buttons">
      <% users.each do |user| %>
        <button onClick="App.Login.SetUser('<%= user %>')"><%= user.capitalize %></button>
      <% end %>
      <button id="loginButton" onClick="App.Login.Submit()" hidden>Login</button>
    </div>

  </div>

</div>

<div hidden>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email,
        id: 'email',
        autofocus: true,
        autocomplete: "email"
      %>
    </div>

    <div class="field">
      <%= f.label :password %><br />
      <%= f.password_field :password,
        id: 'password',
        autocomplete: "current-password"
      %>
    </div>

    <% if devise_mapping.rememberable? -%>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end -%>

    <div class="actions">
      <%= f.submit "Log in", id: 'submit' %>
    </div>
  <% end %>

  <%= render "users/shared/links" %>
</div>
