<div class=" menu-bar ">

  <div class=" user-name ">
    <h1>Ports</h1>
  </div>

  <div class=" admin-link ">
    <%= link_to "Admin", admin_index_path %>
  </div>

  <div class=" log-out ">
    <%= link_to "Back", channels_path %>
  </div>

</div>

<h1>Ports</h1>
<table class=" table ">
  <thead>
    <tr>
      <th>Name</th>
      <th>In/Out</th>
      <th>Path</th>
      <th>Pan</th>
      <th>PortGroup</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @ports.each do |port| %>
      <tr>
        <td><%= port.name %></td>
        <td><%= port.io ? "In" : "Out" %></td>
        <td><%= port.path %></td>
        <td><%= port.pan == 0 ? "C" : (port.pan < 0 ? "L#{port.pan.abs}" : "R#{port.pan}") %></td>
        <td><%= port.port_group.name %></td>
        <td><%= link_to 'Edit', edit_port_path(port) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br \>

<h1>Port Groups</h1>
<table class=" table ">
  <thead>
    <tr>
      <th>Name</th>
      <th>In/Out</th>
      <th>Is Global</th>
      <th>User</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @port_groups.each do |group| %>
      <tr>
        <td><%= group.name %></td>
        <td><%= group.io ? "In" : "Out" %></td>
        <td><%= group.is_global ? "Yes" : "No" %></td>
        <td><%= group.user != nil ? group.user.name : "---" %></td>
        <td><%= link_to 'Edit' %></td>
      </tr>
    <% end %>
  </tbody>
</table>
